<div class="container">
  <nav class="navbar navbar-light bg-light justify-content-between">
    <h2 class="p-3 m-3"> 🍴 All our restaurants 👩‍🍳</h2>
    <p><%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-outline-success mx-5" %></p>
  </nav>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-12 col-md-6 col-lg-4 d-flex justify-content-between">
        <div class="card my-3" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.category %></h6>
            <p class="card-text"><%= restaurant.address %> - <%= restaurant.phone_number %></p>
            <p><%= link_to "Write a review", new_restaurant_review_path(restaurant), class: "btn btn-dark" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
